# defaultcscheme does not work on my CeleraOne ThinkPad x240 atm
defaultcscheme:my

# my own colorscheme for debugging purposes
colorscheme:my

# this one can be used for quick changes, i.e. if you want to highlight
# something special in your current work
#
#cs_re:blue,,bold:header

cs_re:red:\[error\]
cs_re:yellow:\[warn\]
cs_re:cyan,,bold:my 
cs_re:cyan:my .*
cs_re:green: [^ /"']+\.[a-zA-Z0-9]+
cs_re:red,:^=+$





markerline_color:red,black
markerline_timestamp:on
markerline_char:=

statusline_ts_format:%Y/%m/%d %H:%M:%S
statusline_above_data:yes
statusline_attrs:black,green

searches_case_insensitive:yes


