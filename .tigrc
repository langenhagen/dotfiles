# !   Run the command in the foreground with output shown.
# @   Run the command in the background with no output.
# ?   Prompt the user before executing the command.
# <  Exit Tig after executing the command.
# For example:
# bind generic e !?/usr/local/bin/sublime

bind generic D @?rm %(file)                          # remove a file
bind generic Z @?git checkout HEAD %(file)           # checkout latest committed version of a file in status view
bind generic X @?git checkout staging %(file)        # checkout staging version of a file in status view
bind generic E !/usr/bin/vim "%(file)"
bind generic + !git commit --amend
bind generic = !?<git commit
bind generic T !git checkout --theirs %(file)
bind generic T !git checkout --ours %(file)
bind generic π !git add --patch %(file)             # π is alt + p
bind generic <F10> quit
bind generic <F12> !?<git push origin HEAD:refs/for/staging
bind generic P @sh -c "open $(dirname $(realpath %(file)))"



set ignore-case            = no                     # Enum: no, yes, smart-case


